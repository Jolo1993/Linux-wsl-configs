
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"
export PATH=$PATH:/home/jtl/go/bin
export PATH=$PATH:/home/jtl/bin
# ALIAS
alias reload="source /home/jtl/.zshrc"
alias vim="nvim"
alias vi="nvim"
alias zshrc="nvim $HOME/.zshrc"
alias gp="git pull"
alias gpus="git push"
alias gitFire="git add --all && git commit -m 'fire and brimstone' && gpus"
alias kls="kubectl get all"
alias klsp="kubectl get pod"
alias klsd="kubectl get deployment"
alias klss="kubectl get sts"
alias kdp="kubectl delete pod"
alias ll="ls -la"
alias ns="kubectl ns"

notes() {
    if [ -z $1 ]; then
        nvim random_notes
    else
        nvim $1
    fi    
}


# fzf keybindings
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
# Use fzf for command history
export FZF_DEFAULT_OPTS="--height 40% --layout=reverse --border"
bindkey -e
bindkey ^R fzf-history-widget


export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion





# AUTO COMPLETION
source <(kubectl completion zsh)
source <(clusterctl completion zsh)
source <(ytt completion zsh)
source <(kapp completion zsh)
source "${HOME}/home_projects/code/util/my-zsh/zshrc.zsh"
source <(kind completion zsh)






















































source <(vendir completion zsh)
